<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@mipmap/ic_launcher_foreground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="br.com.rodrigosampler.eventrent.Activity.LoginActivity">

   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="br.com.rodrigosampler.eventrent.Activity.LoginActivity">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="30dp"
           android:layout_marginTop="10dp"
           android:src="@mipmap/lgevt" />

       <EditText
           android:id="@+id/editEmail"
           style="@style/Widget.AppCompat.AutoCompleteTextView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:layout_marginTop="10sp"
           android:layout_marginBottom="10sp"
           android:layout_marginLeft="10sp"
           android:layout_marginRight="10sp"
           android:hint="@string/e_mail"
           android:inputType="textEmailAddress"
           android:textColor="@color/colorLetra"
           android:textColorHint="@color/colorHint"
           android:theme="@style/MyEditTextTheme"
           android:background="@drawable/style"
           android:alpha="0.23"
           />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:id="@+id/editSenha"
            android:inputType="textPassword"
            android:hint="@string/senha"
            android:textColor="@color/colorLetra"
            android:textColorHint="@color/colorHint"
            android:theme="@style/MyEditTextTheme"
            android:background="@drawable/style"
            android:alpha="0.23"/>

        <Button
            android:id="@+id/btnLogar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:text="@string/logar"
            android:background="@drawable/button"/>

        <TextView
            android:id="@+id/tvAbreCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/n_o_tem_cadastro_clique_aqui"
            android:textSize="15sp"
            android:textColor="@color/colorAccent"
            />

    </LinearLayout>
</LinearLayout>
